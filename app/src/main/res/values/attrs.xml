<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BPCircleProgressBar自定义 -->
    <declare-styleable name="CircleProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="bottomTextSize" format="dimension" />
        <attr name="topTextSize" format="dimension"/>
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="ArcProgress">
        <attr name="borderWidth" format="dimension"></attr>
        <attr name="unprogresColor" format="color"></attr>
        <attr name="progressColor" format="color"></attr>
        <attr name="radius" format="dimension"></attr>
        <attr name="degree" format="integer"></attr>
        <attr name="arcCapRound" format="boolean"></attr>
        <attr name="backgroundInside" format="integer"></attr>
        <attr name="TextSizeInside" format="integer"></attr>
        <attr name="TextColorInside" format="color"></attr>
    </declare-styleable>

</resources>
