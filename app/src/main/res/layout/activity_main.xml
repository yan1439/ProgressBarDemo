<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.pb.demo.widget.CircleProgressBar
            android:id="@+id/circleProgressBar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:bottomTextSize="13dp"
            app:roundColor="#cacaca"
            app:roundProgressColor="#fe9384"
            app:roundWidth="3dp"
            app:textColor="#687488"
            app:topTextSize="22dp" />

        <com.pb.demo.widget.CircleProgressBar
            android:id="@+id/circleProgressBar2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            app:bottomTextSize="13dp"
            app:roundColor="#cacaca"
            app:roundProgressColor="#fe9384"
            app:roundWidth="3dp"
            app:textColor="#687488"
            app:topTextSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.pb.demo.widget.ArcProgressBar
            android:id="@+id/arcProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:TextColorInside="#687488"
            app:TextSizeInside="18"
            app:arcCapRound="true"
            app:borderWidth="5dp"
            app:degree="90"
            app:progressColor="#fa71df"
            app:radius="100dp"
            app:unprogresColor="#cacaca" />

    </LinearLayout>
</LinearLayout>
